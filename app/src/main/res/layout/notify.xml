<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/notity_bg"
        android:layout_width="match_parent"
        android:layout_height="92dip" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/notity_icon_bg" />

        <ImageView
            android:id="@+id/notify_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/notity_icon" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/notify_icon"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@id/notify_icon"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/notify_band"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:singleLine="true"
                android:textColor="#7B7C7C"
                android:textSize="14sp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/notify_freq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="#D0D0D0"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/notify_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_marginLeft="5dip"
                    android:layout_gravity="bottom"
                    android:textColor="#D0D0D0"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/notity_bg"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/notity_bg"
        android:gravity="center_vertical" >

        <Button
            android:id="@+id/notity_prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dip"
            android:background="@drawable/notify_prev_selected" />

        <Button
            android:id="@+id/notity_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dip"
            android:background="@drawable/notify_next_selected" />

        <Button
            android:id="@+id/notity_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dip"
            android:background="@drawable/notify_close_selected" />
    </LinearLayout>

</RelativeLayout>